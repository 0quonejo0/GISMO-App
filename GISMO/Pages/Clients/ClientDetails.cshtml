@page
@model GISMO.Pages.Clients.ClientDetailsModel
@{
    Layout = null;
}

<link rel="stylesheet" href="~/css/stylemenu.css" />
<script src="~/js/site.js"></script>

<div class="divTop">
    
    <div style="float:left">
        <h2>@Request.Query["selClient"]</h2>
        <label>List of Managed Vessel</label>
    </div>
    <div style="text-align:end; padding-right:35px">
        <img style="width:42px; height:42px" src="~/lib/Images/shelf.png" />
    </div>

    <br /><br />

    <table class="table">
        <thread>
            <tr>
                <th>Vessel Name</th>
                <th>Type</th>
                <th>Manning Agency</th>
                <th>Flag</th>
                <th>Route</th>
                <th>Show Onboard | Agency</th>
            </tr>
        </thread>
        <tbody>
            @foreach (var vessel in Model.SelVessels)
            {
                <tr>
                    <td>
                        <a class="btn-link" href="#" onclick='loadHtml("template", "./VesselDetails?id=@vessel.Id&selVsl=@vessel.VesselName")'>@vessel.VesselName</a>
                    </td>
                    <td>@vessel.Type</td>
                    <td>PTC Phil Trans Carrier</td>
                    <td>Libera</td>
                    <td>Worlwide</td>
                    <td style="width:200px">
                        <a class="btn-lnk" href="/Clients/VesselDetails?id=@vessel.Id&selVsl=@vessel.VesselName">Onboard</a>&nbsp;&nbsp;&nbsp;
                        @*<a href="#" onclick='loadHtml("template", "./Clients/VesselDetails?id=@vessel.Id&selVsl=@vessel.VesselName")'>
                            <span>
                                <img src="~/lib/Images/seafarer.png"/>
                            </span>
                            <span class="text">Show Onboard</span>
                        </a>*@
                        <a class="btn-lnk" href="/Clients/Planner?id=@vessel.Id&selVsl=@vessel.VesselName">Planner</a>
                    </td>
                </tr>
            }

        </tbody>
    </table>
</div>
