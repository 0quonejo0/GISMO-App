@{
    Layout = null;
}

<link rel="stylesheet" href="~/css/stylemenu.css" />
<script src="~/js/site.js"></script>

<div class="divTop" style="padding:13px; margin-bottom:10px">
    <button class="button" style="border-radius:5px; padding-right:10px" href="#" onclick='loadHtml("template", searchVessel())'>Search Vessel</button>
    <a style="padding-left:10px; font-family:'BebasRegular'; font-size: 1.0em" class="btn-lnk" href="#" onclick='loadHtml("template", "../Clients/FindSeafarer")'>Seafarer</a>
    <a style="padding-left:10px; font-family:'BebasRegular'; font-size: 1.0em" class="btn-lnk" href="#" onclick='loadHtml("template", "../Clients/FindClient")'>Client</a>
    <a style="padding-left:10px; font-family:'BebasRegular'; font-size: 1.0em" class="btn-lnk" href="#" onclick='loadHtml("template", "../Clients/FindExpe")'>Experience</a>
</div>

<div class="divTop" style="border-radius:0; overflow-X:scroll">
    <table>
        <tr>
            <th>Vessel Name</th>
            <th>Type</th>
            <th>IMO</th>
            <th>Flag</th>
            <th>Engine</th>
            <th>Year Built</th>
            <th>Route</th>
        </tr>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.VesselName</td>
                    <td>@item.Type</td>
                    <td>@item.IMO</td>
                    <td>@item.Flag</td>
                    <td>@item.Engine</td>
                    <td>@item.YearBuilt</td>
                    <td>@item.Route</td>
                </tr>
            }
        </tbody>
    </table>
</div>
