@{
    Layout = null;
}

<link rel="stylesheet" href="~/css/stylemenu.css" />
<script src="~/js/site.js"></script>

<div class="divTop" style="padding:13px; margin-bottom:10px">
    <button class="button" style="border-radius:5px; padding-right:10px" href="#" onclick='loadHtml("template", searchExpe())'>Find Experience</button>
    @*<a class="btn-lnk" style="text-decoration:none; padding-right:10px; color:#FC7910" href="#" onclick='loadHtml("template", searchExpe())'>Search Experience</a>*@
    <a style="padding-left:10px; font-family:'BebasRegular'; font-size: 1.0em" class="btn-lnk" href="#" onclick='loadHtml("template", "../Clients/FindSeafarer")'>Seafarer</a>
    <a style="padding-left:10px; font-family:'BebasRegular'; font-size: 1.0em" class="btn-lnk" href="#" onclick='loadHtml("template", "../Clients/FindClient")'>Client</a>
    <a style="padding-left:10px; font-family:'BebasRegular'; font-size: 1.0em" class="btn-lnk" href="#" onclick='loadHtml("template", "../Clients/FindVessel")'>Vessel</a>
</div>

<div class="divTop" style="border-radius:0; overflow-X:scroll">
    <table>
        <tr>
            @*<th>Rank</th>*@
            <th>Firstname</th>
            <th>Lastname</th>
            <th>Vessel Type</th>
        </tr>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    @*<td>@item.Rank</td> NOTE: ADD THIS FIELD IN SQL VIEW*@
                    <td>@item.Fname</td>
                    <td>@item.Lname</td>
                    <td>@item.Type</td>
                </tr>
            }
        </tbody>
    </table>
</div>
