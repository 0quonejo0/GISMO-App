@page
@model GISMO.Pages.Clients.EditModel
@{
}
<html style="background-color: lightgray">
@*<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
<link rel="stylesheet" href="css/bootstrap.min.css">*@
<div>
    <h2 class="display-6" style="font-weight:100">Client Management</h2>
    <p>Access, details & information modification</p>
</div>
<br />
<table>
    <tbody>
        <tr>
            <td><label>Client Name</label></td>
            <td><p><input type="text" size="70" value="@Model.Clients.ClientName"/></p></td>
        </tr>
        <tr>
            <td><label>Client Type</label></td>
            <td>
                <p>
                    <select name="ddtype" id="type">
                        <option>@Model.Clients.Type</option>
                        <option value="Ship Management">Ship Management</option>
                        <option value="Manning Agency">Manning Agency</option>
                    </select>
                </p>
            </td>
        </tr>
        <tr>
            <td><label>Corporate Address</label>&nbsp;&nbsp;</td>
            <td><p><input class="input-group-sm" size="70" value="@Model.Clients.Address" /></p></td>
        </tr>
        <tr>
            <td><label>Office Contacts</label></td>
            <td><p><input class="input-group-sm" size="70" value="@Model.Clients.Contacts"/></p></td>
        </tr>
        <tr>
            <td><label>Apps License</label></td>
            <td><p><input class="input-group-sm" size="70" value="@Model.Clients.AppLicense"/></p></td>
        </tr>
    </tbody>
</table>
<div style="text-align:center" >
    <a class="btn btn-info btn-sm" href="#">Reset Changes</a>
    <a class="btn btn-info btn-sm" href="#">Save Changes</a>
</div>
<br />
<hr />
<p>
    <div>
        <a class="btn btn-dark btn-sm" href="#">Assign Vessel</a>
        <a class="btn btn-dark btn-sm" href="#">Show Vessels Pool</a>
        <a class="btn btn-dark btn-sm" href="#">Software License</a>
    </div>
</p>
<table class="table">
    <thead>
        <tr style="background-color:whitesmoke">
            @*<th style="background-color:whitesmoke" width="15">ID</th>*@
            <th>Managed Vessels</th>
            <th>Type</th>
            <th>Flag</th>
            <th>Route</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var vessel in Model.ManageVsl)
        {
            <tr>
                @*<td>@vessel.Id</td>*@
                <td>@vessel.VesselName</td>
                <td>@vessel.Type</td>
                <td>@vessel.Flag</td>
                <td>@vessel.Route</td>
                <td>
                    <a class="btn btn-info btn-sm" href="#">Revoke</a>
                    @*<a class="btn btn-primary btn-sm" href="#">Apps License</a>*@
                </td>
            </tr>
        }
</table>