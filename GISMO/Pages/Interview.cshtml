    }*/
    #accordion li{
        list-style: none;
        width:100%;
        margin-bottom:5px;
        padding:5px;
        background-color:white;
        border-radius:5px;
        border: 1px solid gray;
    }
    #accordion li label{
        padding: 5px;
        display: flex;
        align-items:center;
        justify-content:space-between;
        font-size:15px;
        font-weight:300;
        cursor:pointer;
        color:#006cff;
    }
    #accordion li label span{
        transform: rotate(90deg);
        font-size: 15px;
        font-weight:bold;
        color: #006cff;
    }
    #accordion li label + input[type="radio"]{
        display: none;
    }
    #accordion .content{
        padding: 0 5px;
        line-height: 26px;
        max-height:0;
        overflow: hidden;
        transition: max-height 0.3s;
    }
    #accordion .contentScroll{
        padding: 0 5px;
        line-height: 26px;
        max-height:0;
        overflow: hidden;
        transition: max-height 0.3s;
        overflow-y:scroll;
    }
    #accordion label + input[type="radio"]:checked + .content{
        max-height: 400px;
    }

        #accordion label + input[type="radio"]:checked + .contentScroll {
        max-height: 400px;
    }

    .divScroll {
        position: relative;
        width: 28%;
        float: left;
        height: 400px;
        background-color: whitesmoke;
        overflow: hidden;
        overflow-y: scroll;
        border: solid;
        border-color: silver;
        border-width: thin;
        transform: translateY(231px);
        width: 100%;
        border-bottom-right-radius: 10px;
    }

    .divExpiring {
        position: relative;
        width: 28%;
        float: left;
        background-color: whitesmoke;
        height: 112px;
        border: solid;
        border-width: thin;
        border-color: silver;
        transform: translateY(210px);
        width: 100%;
    }

    .divleft {
        position: absolute;
        height: 200px;
        width: 683px;
        float: left;
        padding: 10px;
        padding-top: 20px;
    }

    .divright {
        position: absolute;
        height: 200px;
        width: 200px;
        float: right;
        transform: translateX(345%);
        padding: 10px;
        padding-top: 20px;
    }

    .accMain {
        margin: 0;
        padding: 0;
        font-family: 'Poppins', sans-serif;
        box-sizing: border-box;
    }
</style>

