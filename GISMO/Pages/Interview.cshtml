<style>
    .divParent{
        
    }

    .divTop{
        top: 19px;
        position:relative;
        height:80vh;
        float:left;
        background-color:silver;
        width:300px;
        transform:translateX(2%);
        padding:10px;
        border-top-left-radius: 10px;
        border-bottom-left-radius: 10px;
    }
    .divBottom{
        top:100px;
        position:absolute;
        height: 80vh;
        float:right;
        width:900px;
        background-color: #E6E1E1;
        transform:translateX(34%);
        border-top-right-radius: 10px;
        border-bottom-right-radius:10px;
    }
    .divleft{
        position:absolute;
        height: 200px;
        width: 683px;
        float: left;
        /*background-color:blue;*/
        padding:10px;
        padding-top:20px;
    }
    .divright {
        position: absolute;
        height: 200px;
        width: 200px;
        float: right;
        /*background-color: red;*/
        transform:translateX(345%);
        padding: 10px;
        padding-top: 20px;
    }
    .accMain{
        margin:0;
        padding: 0;
        font-family:'Poppins', sans-serif;
        box-sizing: border-box;
    }
    #accordion{
        width: 100%;
        padding:0;
    }
    #accordion li{
        list-style: none;
        width:100%;
        margin-bottom:5px;
        padding:5px;
        background-color:white;
        border-radius:5px;
    }
    #accordion li label{
        padding: 5px;
        display: flex;
        align-items:center;
        justify-content:space-between;
        font-size:15px;
        font-weight:300;
        cursor:pointer;
    }
    #accordion li label span{
        transform: rotate(90deg);
        font-size: 15px;
        font-weight:bold;
        color: #333;
    }
    #accordion li label + input[type="radio"]{
        display: none;
    }
    #accordion .content{
        padding: 0 5px;
        line-height: 26px;
        max-height:0;
        overflow: hidden;
        transition: max-height 0.3s;
    }
    #accordion label + input[type="radio"]:checked + .content{
        max-height: 400px;
    }
</style>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<body>
    <form>
    <div class="divparent">
        <div class="divTop">
            <p>&nbsp;Desktop</p>
            <ul id="accordion">
                <li>
                    <label for="first" style="font-family:Calibri; font-weight:bold">Interviewer's Evaluation<span>&#x3e</span></label>
                    <input type="radio" name="accordion" id="first" checked />
                    <div class="content">
                        <textarea style="height:200px; width:260px; line-height:1.2; font-size:small" asp-for="Evaluation"></textarea>
                    <br />
                    <div style="text-align:end">
                        <input type="submit" value="Save" />
                    </div>
                    </div>
                </li>
            </ul>
            <ul id="accordion">
                <li>
                    <label for="second" style="font-family:Calibri; font-weight:bold">Applicant History<span>&#x3e</span></label>
                    <input type="radio" name="accordion" id="second" />
                    <div class="content">
                        <p>
                            Previous interview results
                        </p>
                    </div>
                </li>
            </ul>
            <ul id="accordion">
                <li>
                    <label for="third" style="font-family:Calibri; font-weight:bold">Position Openings<span>&#x3e</span></label>
                    <input type="radio" name="accordion" id="third" />
                    <div class="content">
                        <p>
                            Show positions, vessel type
                            and requirements
                        </p>
                    </div>
                </li>
            </ul>
        </div>
        <div class="divBottom">
            <div class="divleft">
                <form>
                    <input asp-for="Evaluation" class="form-control" /><br />
                    <input asp-for="Evaluation" class="form-control" /><br />
                    <input asp-for="Evaluation" class="form-control" />
                </form>
            </div>
            <div class="divright">
                @if (Model.Applicant != null)
                    {
                        @if (Model.Applicant.Count > 0)
                        {
                            <img src="~/lib/images/@(Model.Crew.Id).jpg" style="" alt="_NoImage" width="100%" height="100%">
                        }
                    }
            </div>
        </div>
    </div>


    </form>
</body>



