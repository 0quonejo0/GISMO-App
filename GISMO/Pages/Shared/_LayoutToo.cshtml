<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>GISMO - Global Information for Ship Management Operators</title>
    <link rel="stylesheet" href="~/css/stylemenu.css" />
    <script src="~/js/site.js"></script>
</head>

<body style="padding-top:0px">
    <header class="header" style="margin-top:2px">
       <ul>
        <li class="logo">
                <img src="~/lib/images/gismo_logo_bw2.png" style="height:25px; background:transparent; width:90px; border:none; transform: translateY(8px)" class="applicantPix">
        </li>
        <li>
            <partial name="_LoginPartial" />
        </li>
       </ul>
    </header>
</body>

<div></div>
<div class="maindiv">
    <div class="navigation">
        <ul>
            <li class="list active">
                <a href="#">
                @*<a href="#" onclick='loadHtml("template", "../Dashboard")'>*@
                    <span class="icon">
                        <ion-icon name="bar-chart-outline"></ion-icon>
                    </span>
                    <span class="text">Dashboard</span>
                </a>
            </li>
            <li class="list">
                <a href="#" onclick='loadHtml("template", "../Clients/Clients")'>
                    <span class="icon">
                        <ion-icon name="people-outline"></ion-icon>
                    </span>
                    <span class="text">Clients</span>
                </a>
            </li>
            <li class="list">
                @*<a href="#" onclick='loadHtml("template", myFunction())'>*@
                <a href="#" onclick='loadHtml("template", "../Clients/FindSeafarer")'>
                    <span class="icon">
                        <ion-icon name="telescope-outline"></ion-icon>
                    </span>
                    <span class="text">Search</span>
                </a>
            </li>
            <li class="list">
                <a href="#">
                    <span class="icon">
                        <ion-icon name="boat-outline"></ion-icon>
                    </span>
                    <span class="text">Vessels</span>
                </a>
            </li>
            <li class="list">
                <a href="#">
                    <span class="icon">
                        <ion-icon name="settings-outline"></ion-icon>
                    </span>
                    <span class="text">Navigation</span>
                </a>
            </li>
            <li class="list">
                <a href="#">
                    <span class="icon">
                        <ion-icon name="navigate-circle-outline"></ion-icon>
                    </span>
                    <span class="text">Settings</span>
                </a>
            </li>
            <div class="indicator"></div>
        </ul>
    </div>
    <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule srcS="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>
</div>

<div id="template" class="template"><label style="color:dimgray">Loading...</label></div>

<div>
    @RenderBody()
</div>

<script>
    const list = document.querySelectorAll('.list');
    function activeLink() {
        list.forEach((item) =>
            item.classList.remove('active'));
        this.classList.add('active');
    }
    list.forEach((item) =>
        item.addEventListener('click', activeLink));

    function searchCrew() {
        let textParam;
        let userInput = prompt("Seafarer's Lastname:");
        if (userInput == null || userInput == "") {
            textParam = "User cancelled the prompt";
        } else {
            textParam = "../Clients/FindSeafarer?thisParam=" + userInput;
            return textParam;
        }
        console.log(textParam);
    }
    function searchClient() {
        let textParam;
        let userInput = prompt("Client name:");
        if (userInput == null || userInput == "") {
            textParam = "User cancelled the prompt";
        } else {
            textParam = "../Clients/FindClient?thisParam=" + userInput;
            return textParam;
        }
        console.log(textParam);
    }
    function searchExpe() {
        let textParam;
        let userInput = prompt("Search by experience (Ex: Container):");
        if (userInput == null || userInput == "") {
            textParam = "User cancelled the prompt";
        } else {
            textParam = "../Clients/FindExpe?thisParam=" + userInput;
            return textParam;
        }
        console.log(textParam);
    }
    function searchVessel() {
        let textParam;
        let userInput = prompt("Search Vessel:");
        if (userInput == null || userInput == "") {
            textParam = "User cancelled the prompt";
        } else {
            textParam = "../Clients/FindVessel?thisParam=" + userInput;
            return textParam;
        }
        console.log(textParam);
    }
</script>
</html>
